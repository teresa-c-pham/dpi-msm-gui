<h1>
  List of all directors
</h1>

<hr>

<form action="/create_director" method="post">
  <div>
    <label for="director_name">Name</label>
    <input id="director_name" type="text" name="query_name">
  </div>

  <div>
    <label for="dob">Dob</label>
    <input id="dob" type="date" name="query_dob">
  </div>
  
  <div>
    <label for="director_bio">Bio</label>
    <textarea id="director_bio" rows="3" type="text" name="query_bio"></textarea>
  </div>
  
  <div>
    <label for="image_field">Image</label>
    <input id="image_field" type="text" name="query_image">
  </div>

  <button>Create director</button>	
</form>
<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
