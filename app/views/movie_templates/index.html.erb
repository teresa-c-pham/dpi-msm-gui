<h1>
  List of all movies
</h1>

<hr>
<form action="/create_movie" method="post">
  <div>
    <label for="movie_title">Title</label>
    <input id="movie_title" type="text" name="query_title">
  </div>
  <div>
    <label for="year">Year</label>
    <input id="year" type="number" name="query_year">
  </div>
  <div>
    <label for="movie_duration">Duration</label>
    <input id="movie_duration" type="number" name="query_duration">
  </div>
  <div>
    <label for="movie_description">Description</label>
    <textarea id="movie_description" rows="3" type="text" name="query_description"></textarea>
  </div>
  <div>
    <label for="image_field">Image</label>
    <input id="image_field" type="text" name="query_image">
  </div>
  <div>
    <label for="director_id">Director ID</label>
    <input id="director_id" type="number" name="query_director_id">
  </div>
  <button>Create movie</button>	
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <%= the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
